<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.alexbarry.alexgames">

	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <!-- To get the IP address, so the user can send it to their friends on
         the same network to play together -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".server.ServerMonitorActivity"
            android:label="@string/server_monitor_activity_label"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="net.alexbarry.alexgames.server_monitor" />
            </intent-filter>
        </activity>
        <service android:name=".server.GameServerService" android:exported="false"/>
    </application>

</manifest>
